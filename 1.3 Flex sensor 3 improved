//////////////////////////////////////////////////////////////
//                          SETUP                           //
//////////////////////////////////////////////////////////////
                                                            //
#include <TimerOne.h>                                       //  
                                                            //                                               
int files = 10;                                             //
int columnes = 10;                                           //
int array1[10][10];                                          //
int F1 = 0;                                                 //
int map1 = 0;                                               //
int i = 0;                                                  //
int j = 0;                                                  //
int x = 0;                                                  //
int t = 0;                                                  //
int rA0 = 0;                                                //
int sum = 0;                                                //
int arit = 0;                                               //
int M = 0;
int M0 = 0;
                                                            //
const int POLZE = A0;                                       //
                                                            // 
void setup() {                                              //
  Serial.begin(9600);                                     // Serial config
  Serial.println("//////////////////////////////////////////////////////////////");
  Serial.println("//                                                          //");
  Serial.println("//         INTEGRATED PROJECT 2 - LSC POWER GLOVE           //");
  Serial.println("//         TEAM 2:     IBRA   URI   GERARD   ALEIX          //");
  Serial.println("//         CODE 1.3:   FLEX CAPTION 4 - ONLY MAIN LOOP 0.1s //");
  Serial.println("//                                                          //");
  Serial.println("//////////////////////////////////////////////////////////////");
  //Serial.println("X Y Z U V W");                          // Headers
  //Timer1.initialize(2000);                                // Interrupci贸 interna cicle 2ms
  Timer1.initialize(100000);                               // Interrupci贸 interna cicle 0.1s
  Timer1.attachInterrupt(ISR_interna);                      // Int interna declaraci贸 funci贸
  pinMode(POLZE,INPUT);                                     //
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          MAIN LOOP                       //
//////////////////////////////////////////////////////////////
                                                            //
void loop() {                                               //
  if ( M == 1 ){
    static uint32_t temps = millis();
    if (millis() > temps + 25){
      Serial.println("");
      Serial.print("CAPTURA ");
      Serial.print(j);
      Serial.print(" [ ");
      Serial.print("POLZE -> ");
      M0 = map(arit,730,920,0,4);
      Serial.print(M0);
      Serial.println(" ]");
      M = 0;
    }
  }

  delay(250);                                               //
                                                            //
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          INTERRUPT                       //
//////////////////////////////////////////////////////////////
                                                            //
void ISR_interna(){                                         // Funcio interrupcio interna 
                                                            //
  static uint32_t temps = millis();
  if (millis() > temps + 25){  
    x=analogRead(POLZE);                                                  
    array1[i][j] = x; 
    sum = sum+x;
    i++;
    temps = millis();
    if ( i >= files ){
      j++;
      arit = sum/i;
      sum = 0;
      i = 0;
      M = 1;
      if (j >= columnes){
        j = 0;
        for(int i=0;i<files;i++){
          for(int j=0;j<columnes;j++){                      //
            array1[i][j] = 0;                               // Reset array
          }                                                 //
        }                                                   //
      }                                                     //
    }                                                       //
  }                                                         //
}                                                           //
                                                            //
