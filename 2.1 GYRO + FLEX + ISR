//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          INIT                            //
//////////////////////////////////////////////////////////////
                                                            //
#include "MPU9250.h"                                        //
                                                            //
#include <TimerOne.h>                                       //  
                                                            //
MPU9250 mpu;                                                //
                                                            //
int files = 5;                                              // Mida array files
//int columnes = 5;                                         // Mida array columnes
int array0[5];                                              // Arrays
int array1[5];                                              //
int arrayR[5];                                              // 
int arrayP[5];                                              //
int arrayY[5];                                              // 
int i = 0;                                                  // Variables de bucle
int j = 0;                                                  //
int t = 50;                                                 // Variable temps
int n = 0;                                                  // Variable comptador    
int rA0 = 0;                                                // Lectura sensors
int rA1 = 0;                                                //
int R = 0;                                                  //
int P = 0;                                                  //
int Y = 0;                                                  //
int sum0 = 0;                                               // Suma lectures
int sum1 = 0;                                               //
int total0 = 0;                                             //
int total1 = 0;                                             //
int M = 0;                                                  // 
int M0 = 0;                                                 // Mapejat valor final
int M1 = 0;                                                 //
int MR = 0;                                                 //
int MP = 0;                                                 //
int MY = 0;                                                 //
                                                            //
const int POLZE = A0;                                       // Dits de la ma
const int INDEX = A1;                                       //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          SETUP                           //
//////////////////////////////////////////////////////////////
                                                            //
void setup() {                                              //
  Serial.begin(9600);                                       //
  Wire.begin();                                             //
  Serial.println("//////////////////////////////////////////////////////////////");
  Serial.println("//                                                          //");
  Serial.println("//         INTEGRATED PROJECT 2 - LSC POWER GLOVE           //");
  Serial.println("//         TEAM 2:     IBRA   URI   GERARD   ALEIX          //");
  Serial.println("//         CODE 2.1:           GYRO + FLEX                  //");
  Serial.println("//                                                          //");
  Serial.println("//////////////////////////////////////////////////////////////");
  pinMode(POLZE,INPUT);                                     // Definició variables sensors flex
  pinMode(INDEX,INPUT);                                     //
  delay(1000);                                              //
  if (!mpu.setup(0x68)) {                                   //    
    Serial.println("MPU connection failed.");               //
    delay(1000);                                            //
  }                                                         //
  Timer1.initialize(1000000);                                // Interrupció interna cicle 0.2s
  Timer1.attachInterrupt(ISR_interna);                      // Int interna declaració funció//
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          MAIN LOOP                       //
//////////////////////////////////////////////////////////////
                                                            //
void loop() {                                               //
  if (mpu.update()) {                                       //
    if ( i >= files){                                       //
      static uint32_t prev_ms = millis();                   //
      if (millis() > prev_ms + t) {                         //
        total0 = sum0;                                      //
        total1 = sum1;                                      //
        Serial.println("");                                 //
        Serial.println("/////////////////////////////////");//
        Serial.print("CAPTURA ");                           //
        Serial.println(n);                                  //   
        TAULES();                                           //     
        FLEX();                                             //
        //GYR();                                            //       
        n++;                                                //
        j++;                                                //
        i = 0;                                              //
        for(int i=0;i<files;i++){                           // Reset arrays
          array0[i] = 0;                                    // 
          array1[i] = 0;                                    //
          arrayR[i] = 0;                                    //
          arrayP[i] = 0;                                    //
          arrayY[i] = 0;                                    //
        }                                                   //
      }                                                     //
      prev_ms = millis();                                   //
    }                                                       //
  }                                                         //
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          TAULES                          //
//////////////////////////////////////////////////////////////
                                                            //
void TAULES() {                                             //
                                                            //
  Serial.println("");                                       //
  Serial.println(" TAULES =  A0  A1   R   P  Y ");          //
  Serial.println("");                                       //
  for(int i=0;i<files;i++){                                 //
    Serial.print("   Nº   ");                               //
    Serial.print(i);                                        //
    Serial.print(" { ");                                    //
    Serial.print(array0[i]);                                //
    Serial.print(" ");                                      //
    Serial.print(array1[i]);                                //
    Serial.print("  ");                                     //
    Serial.print(arrayR[i]);                                //
    Serial.print("  ");                                     //
    Serial.print(arrayP[i]);                                //
    Serial.print("  ");                                     //
    Serial.print(arrayY[i]);                                //
    Serial.print(" ");                                      //
    Serial.println("} ");                                   //
    Serial.println("");                                     //
  }                                                         //
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          FLEX SENSORS                    //
//////////////////////////////////////////////////////////////
                                                            //
void FLEX() {                                               //
  sum0 = 0;                                                 // Reset suma mesures
  sum1 = 0;                                                 //                                             
  if ( total0 <= 3750 ) {                                   //
    total0 = 3751;                                          // Filtratge valors negatius 
  }                                                         //
  if ( total0 >= 4750 ) {                                   // Filtratge valors excessius
    total0 = 4749;                                          //
  }                                                         //
  if ( total1 <= 3750 ) {                                   //
    total1 = 3751;                                          // Filtratge valors negatius 
  }                                                         //
  if ( total1 >= 4750 ) {                                   // Filtratge valors excessius
    total1 = 4749;                                          //
  }                                                         //
  M0 = map(total0,3750,4750,1,5);                           // Mapejat a rang de valors 1 - 5
  M1 = map(total1,3750,4750,1,5);                           // Mapejat a rang de valors 1 - 5                                                          //
  Serial.println("");                                       //
  Serial.print(" FLEX -> [ ");                              //
  Serial.print("POLZE = ");                                 // 
  Serial.print(total0);                                     // 
  Serial.print(" (");                                       //
  Serial.print(M0);                                         //
  Serial.print(") ");                                       //
  Serial.print(" | ");                                      //
  Serial.print("INDEX = ");                                 //
  Serial.print(total1);                                     //
  Serial.print(" (");                                       //
  Serial.print(M1);                                         //
  Serial.print(") ");                                       //
  Serial.println(" ] ");                                    //
  Serial.println("");                                       //
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          GYROSCOPE                       //
//////////////////////////////////////////////////////////////
                                                            //
void GYR() {                                                //
  if (mpu.update()) {                                       //
    //R = mpu.getRoll();                                    // Lectura angles
    //P = mpu.getPitch();                                   //
    //Y = mpu.getYaw();                                     //
    MR = map(R,-180,180,0,36);                              // Mapejat 
    MP = map(P,-180,180,0,36);                              // 
    MY = map(Y,-180,180,0,36);                              //
    //MR = map(R,-180,180,-18,18);                          // Mapejat 
    //MP = map(P,-180,180,-18,18);                          // 
    //MY = map(Y,-180,180,-18,18);                          //
    Serial.println("");                                     //
    Serial.print(" GYR -> [ ");                             //
    Serial.print(" [ ");                                    //
    Serial.print("ROLL = ");                                // 
    //Serial.print(R);                                      //
    //Serial.print(" = ");                                  // 
    //Serial.print(R, DEC);                                 //
    //Serial.print(mpu.getRoll(), 0);                       //
    Serial.print(" (");                                     //
    Serial.print(MR);                                       //
    Serial.print(") ");                                     //
    Serial.print(" | ");                                    //
    Serial.print("PITCH = ");                               //
    //Serial.print(P);                                      //
    //Serial.print(" = ");                                  // 
    //Serial.print(P, DEC);                                 //
    //Serial.print(mpu.getPitch(), 0);                      //
    Serial.print(" (");                                     //
    Serial.print(MP);                                       //
    Serial.print(") ");                                     //
    Serial.print(" | ");                                    //
    Serial.print("YAW = ");                                 //
    //Serial.print(Y);                                      //
    //Serial.print(" = ");                                  // 
    //Serial.print(Y, DEC);                                 //
    //Serial.print(mpu.getYaw(), 0);                        //
    Serial.print(" (");                                     //
    Serial.print(MY);                                       //
    Serial.print(") ");                                     //
    Serial.println(" ] ");                                  //
  }                                                         //
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          INTERRUPT                       //
//////////////////////////////////////////////////////////////
                                                            //
void ISR_interna(){                                         // Funcio interrupcio interna (cada 200ms)
  static uint32_t prev_ms = millis();                       //
  if (millis() > prev_ms + t) {                             //
    rA0 = analogRead(POLZE);                                // Lectura flex                                    
    rA1 = analogRead(INDEX);                                //
    array0[i] = rA0;                                        // Assignació valors en taules
    array1[i] = rA1;                                        //
    sum0 = sum0+rA0;                                        // Suma de cada mesura
    sum1 = sum1+rA1;                                        //
    R = mpu.getRoll();                                      // Lectura angles
    P = mpu.getPitch();                                     //
    Y = mpu.getYaw();                                       //
    arrayR[i] = R;                                          // Assignació valors en taules
    arrayP[i] = P;                                          //
    arrayY[i] = Y;                                          // 
    i++;                                                    //
    if ( i >= files){                                       //
      delay(1000);                                          //
    }                                                       //
  }                                                         //
  prev_ms = millis();                                       //
}                                                           //
                                                            //
