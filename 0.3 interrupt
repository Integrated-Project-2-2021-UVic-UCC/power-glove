                                                            //
#include <TimerOne.h>                                       //  
                                                            //                                               
int files = 10;                                             //
int columnes = 5;                                           //
int array1[10][5];                                          //
int F1 = 0;                                                 //
int map1 = 0;                                               //
int i = 0;
int j = 0;
                                                            //                                                    
void setup() {                                              //
  Serial.begin(115200);                                     // Serial config
  Serial.println("//////////////////////////////////////////////////////////////");
  Serial.println("//                                                          //");
  Serial.println("//         INTEGRATED PROJECT 2 - LSC POWER GLOVE           //");
  Serial.println("//         TEAM 2:     IBRA   URI   GERARD   ALEIX          //");
  Serial.println("//         CODE 0.3:     INTERNAL INTERRUPT                 //");
  Serial.println("//                                                          //");
  Serial.println("//////////////////////////////////////////////////////////////");
  //Serial.println("X Y Z U V W");                          // Headers
  //Timer1.initialize(2000);                                  // Interrupci贸 interna cicle 2ms
  Timer1.initialize(1000000);                                  // Interrupci贸 interna cicle 1s
  Timer1.attachInterrupt(ISR_interna);                              // Int interna declaraci贸 funci贸
}                                                           //
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          MAIN LOOP                       //
//////////////////////////////////////////////////////////////
                                                            //
void loop() {                                               //
                                                            //
  
}
                                                            //
//////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////
//                          INTERRUPT                       //
//////////////////////////////////////////////////////////////
                                                            //
void ISR_interna(){                                         // Funcio interrupcio interna 
                                                            //
  i++;
  if ( i >= files ) {
    j++;
  }             
  Serial.print("i = ");
  Serial.print(i);
  //Serial.print(" ,");
  //map1 = map(i,0,100,0,1000);
  //Serial.print(" map1 = ");
  //Serial.print(map1);
  Serial.print(" | ");
  array1[i][j] = i;
  //delay(100);
  //Serial.print(array1[i]);
 

  if (i >= files){
    Serial.println("");
    Serial.println(" array = ");
    for(int i=0;i<files;i++){
      Serial.print(" fila ");
      Serial.print(i);
      Serial.print(" { ");
      for(int j=0;j<columnes;j++){  
        Serial.print(array1[i][j]);
        Serial.print(" ");  
        delay(100);
      }
      Serial.println(" } ");
      delay(100); 
    }
    i = 0;
    if (j >= columnes){
      j = 0;
      for(int i=0;i<files;i++){
        for(int j=0;j<columnes;j++){  
          array1[i][j] = 0;                                 // Reset array
        }
      } 
    }

  } 
}
